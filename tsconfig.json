{
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@my/app": ["./packages/app"],
      "@my/app/*": ["./packages/app/*"],
      "@my/auth": ["./packages/auth"],
      "@my/auth/*": ["./packages/auth/*"],
      "@my/config": ["./packages/config"],
      "@my/config/*": ["./packages/config/*"],
      "@my/ui": ["./packages/ui"],
      "@my/ui/*": ["./packages/ui/*"]
    }
  },
  "extends": "./tsconfig.base",
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/types",
    "apps/next/out",
    "apps/next/.next",
    "apps/next/.tamagui"
  ]
}
